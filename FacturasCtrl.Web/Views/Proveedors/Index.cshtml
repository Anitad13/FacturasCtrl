@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pronticel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prondigv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pronombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prodirec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Protel1)

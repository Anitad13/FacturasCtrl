            </th>
            <th>
                @Html.DisplayNameFor(model => model.Protel1)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Promail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procontac)
            </th>
         
        
          
            <th>
                @Html.DisplayNameFor(model => model.Estados.Estnombre)
            </th>
           
            <th></th>
        </tr>

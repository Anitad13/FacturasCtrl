@model IEnumerable<FacturasCtrl.Web.Data.Entities.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pronticel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prondigv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pronombre)
            </th>
            <th>
